<h1>Your task</h1>

<h2><%= @task.title %></h2>
<p><%= @task.details %></p>
<% if @task.completed %>
  <p>completed!</p>
  <% else %>
  <p>To be completed!</p>
<% end %>

<p><%=link_to  "Edit this task", edit_task_path %></p>
<%= link_to  "Delete this task",
  task_path(@task),
  data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}
%>

<p><%= link_to  "back to your tasks", tasks_path  %></p>
